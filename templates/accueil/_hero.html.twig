{# Section Hero - Page d'accueil CF2M #}
<section class="relative h-screen min-h-[600px] overflow-hidden">

    {# Fond photo (placeholder gradient en attendant la vraie image) #}
    {# Remplacer ce div par : <img src="{{ asset('images/hero-bg.jpg') }}" alt="" class="absolute inset-0 h-full w-full object-cover"> #}
    <div class="absolute inset-0">
        {# Simulation de la photo : dégradé avec texture #}
        <div class="absolute inset-0 bg-gradient-to-br from-[#1a2e4a] via-[#2a4a6f] to-[#1e3a5f]"></div>
        {# Motif subtil pour simuler la texture de la photo #}
        <div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(circle at 20% 50%, rgba(255,255,255,0.1) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255,255,255,0.08) 0%, transparent 40%);"></div>
    </div>

    {# Overlay bleu semi-transparent (comme sur le design) #}
    <div class="absolute inset-0 bg-[#1e3a5f]/60"></div>

    {# Navigation #}
    <header class="relative z-20">
        <nav class="mx-auto flex max-w-7xl items-center justify-between px-6 py-5 lg:px-8">
            {# Logo CF2M - cercle fin avec "fm" #}
            <a href="{{ path('app_accueil') }}" class="flex items-center gap-3">
                <div class="flex h-10 w-10 items-center justify-center rounded-full border border-white/50">
                    <span class="text-sm font-bold italic text-white">fm</span>
                </div>
                <span class="hidden text-[10px] uppercase tracking-widest text-white/60 sm:block">Centre de formation<br>2 mille</span>
            </a>

            {# Liens de navigation - espacement large comme sur le design #}
            <div class="hidden items-center gap-10 md:flex">
                <a href="#formations" class="text-[13px] text-white/80 transition hover:text-white">
                    Nos Formations
                </a>
                <a href="#contact" class="text-[13px] text-white/80 transition hover:text-white">
                    Nous contacter
                </a>
                <a href="#activites" class="text-[13px] text-white/80 transition hover:text-white">
                    Nos activités
                </a>
            </div>

            {# Menu mobile #}
            <button type="button" class="text-white md:hidden" aria-label="Ouvrir le menu">
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>
            </button>
        </nav>
    </header>

    {# Contenu principal du hero #}
    <div class="relative z-10 mx-auto flex h-[calc(100%-80px)] max-w-7xl items-center px-6 lg:px-8">
        <div class="flex w-full flex-col lg:flex-row lg:items-center lg:gap-8">

            {# Colonne gauche - texte #}
            <div class="flex-1 lg:max-w-[55%]">
                {# Surtitre #}
                <p class="mb-3 text-[11px] font-medium uppercase tracking-[0.25em] text-white/60">
                    Formations professionnelles
                </p>

                {# Titre principal #}
                <h1 class="mb-8 text-3xl font-light leading-tight text-white sm:text-4xl lg:mb-10 lg:text-[42px]">
                    des métiers du numérique
                </h1>

                {# Chiffres clés - style fidèle au design #}
                <div class="mb-8 flex flex-wrap items-start gap-10 lg:mb-10 lg:gap-14">
                    <div>
                        <p class="text-3xl font-bold italic text-[#5a8ab5] lg:text-[38px]">100%</p>
                        <p class="mt-1 text-[11px] text-white/50">gratuit</p>
                    </div>
                    <div>
                        <p class="text-3xl font-bold italic text-[#5a8ab5] lg:text-[38px]">80%</p>
                        <p class="mt-1 text-[11px] text-white/50">de pratique</p>
                    </div>
                    <div>
                        <p class="text-3xl font-bold italic text-[#5a8ab5] lg:text-[38px]">1600 h</p>
                        <p class="mt-1 text-[11px] text-white/50">de cours</p>
                    </div>
                </div>

                {# Bouton CTA - vert/teal comme sur le design #}
                <a href="#formations"
                   class="inline-block rounded bg-[#2a9d8f] px-7 py-2.5 text-[13px] font-semibold uppercase tracking-wider text-white transition hover:bg-[#238b7e]">
                    Nos Formations
                </a>
            </div>

            {# Colonne droite - portrait dans cercle décoratif #}
            <div class="relative mt-12 flex flex-1 items-center justify-center lg:mt-0 lg:justify-end">
                <div class="relative">
                    {# Arc décoratif extérieur (trait fin courbe) #}
                    <div class="absolute -inset-4 rounded-full border border-white/15"></div>

                    {# Cercle principal du portrait #}
                    <div class="relative h-56 w-56 overflow-hidden rounded-full border-2 border-white/25 sm:h-72 sm:w-72 lg:h-80 lg:w-80">
                        {# Placeholder portrait - remplacer par : <img src="{{ asset('images/portrait.jpg') }}" alt="Étudiante CF2M" class="h-full w-full object-cover"> #}
                        <div class="flex h-full w-full items-center justify-center bg-gradient-to-br from-[#8ba4be] to-[#a0b8cc]">
                            <svg class="h-24 w-24 text-white/30" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                            </svg>
                        </div>
                    </div>

                    {# Accents décoratifs - petits éléments géométriques comme sur le design #}
                    <div class="absolute -right-6 top-1/4 h-8 w-8 rounded-sm border border-[#2a9d8f]/40 bg-[#2a9d8f]/10"></div>
                    <div class="absolute -right-3 top-1/4 mt-10 h-5 w-5 rounded-sm bg-[#2a9d8f]/20"></div>
                    <div class="absolute -left-4 bottom-1/4 h-6 w-6 rounded-sm border border-white/20"></div>
                </div>
            </div>

        </div>
    </div>
</section>
